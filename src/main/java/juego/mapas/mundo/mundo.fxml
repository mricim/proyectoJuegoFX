<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.juego.mapas.mundo.MundoController">
    <top>
        <GridPane fx:id="toolbarGridPane" alignment="TOP_CENTER">
            <children>
                <MenuBar GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <menus>
                        <Menu mnemonicParsing="false" text="Game">
                            <items>
                                <MenuItem mnemonicParsing="false" text="New Game                F1"/>
                                <MenuItem mnemonicParsing="false" text="Exit                            F2"/>
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

                <FlowPane fx:id="recuros" alignment="CENTER" hgap="40.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </FlowPane>
                <HBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="5">
                    <Button text="Volver" onMouseClicked="#toMundo"/>
                    <SplitMenuButton fx:id="selectorCiudad" mnemonicParsing="false" text="SplitMenuButton">
                        <items>
                        </items>
                    </SplitMenuButton>
                </HBox>
            </children>
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="100" percentWidth="20"
                                   prefWidth="100"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="400" percentWidth="70"
                                   prefWidth="100"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="100" percentWidth="10"
                                   prefWidth="100"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </top>
    <center>
        <ScrollPane hbarPolicy="NEVER" pannable="true" prefHeight="600.0" prefWidth="800.0" vbarPolicy="NEVER"
                    BorderPane.alignment="CENTER">
            <content>

                <!--AQUI GRIDPANE-->
                <GridPane fx:id="gridPaneMap" gridLinesVisible="true">
                </GridPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
